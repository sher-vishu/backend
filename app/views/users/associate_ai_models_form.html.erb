<%= form_with(model: current_user, url: associate_ai_models_path, method: :post) do |f| %>
  <div class="max-w-lg mx-auto bg-white shadow-md rounded-lg overflow-hidden">
    <div class="p-4">
      <h2 class="text-xl font-bold mb-4">Select AI Models</h2>
    <% AiModel.all.each do |ai_model| %>
      <div class="flex items-center justify-between py-2 border-b border-gray-200">
      <div class="flex items-center">
          <%= check_box_tag "user[ai_model_ids][]", ai_model.id, current_user.ai_models.include?(ai_model), { class: "mr-2", disabled: !ai_model.availability || ai_model.user.present? } %>
          <%= label_tag "user_ai_model_ids_#{ai_model.id}", ai_model.name, class: "text-sm" %>
        </div>
        <div class="flex items-center">
        <span class="font-bold mr-1">Status:</span>
        <% if current_user.ai_models.include?(ai_model) %>
              <span class="<%= ai_model.availability ? 'text-green-500' : 'text-red-500' %>">
                <%= ai_model.availability ? 'Available' : 'Unavailable' %>
              </span>
            <% else %>
              <span class="text-red-500">Unavailable</span>
            <% end %>
      </div>
    </div>
    <% end %>
  </div>

  <div class="px-4 py-3 bg-gray-100 text-right">
  <%= f.submit "Save AI Models", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
</div>
</div>
<% end %>



   